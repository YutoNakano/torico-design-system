{
  "name": "@torico/design-system",
  "version": "0.1.0",
  "description": "TORICO Design System - shared design tokens and components for DRAWER ecosystem",
  "main": "dist/native/index.js",
  "module": "dist/native/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/native/index.js",
      "require": "./dist/native/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./tokens": {
      "import": "./tokens/index.ts",
      "require": "./tokens/index.ts",
      "types": "./tokens/index.ts"
    },
    "./native": {
      "import": "./dist/native/index.js",
      "require": "./dist/native/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./web": {
      "import": "./dist/web/index.js",
      "require": "./dist/web/index.js"
    },
    "./tailwind": {
      "import": "./dist/web/tailwind.tokens.js",
      "require": "./dist/web/tailwind.tokens.js"
    }
  },
  "scripts": {
    "build": "npm run build:tokens && npm run type-check",
    "build:tokens": "ts-node build/build-tokens.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react-native": "^0.72.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "tokens",
    "README.md"
  ],
  "keywords": [
    "design-system",
    "design-tokens",
    "react-native",
    "torico",
    "drawer"
  ],
  "license": "MIT"
}
